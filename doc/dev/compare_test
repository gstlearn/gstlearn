# This script is meant to compare a Resulting test file (out) to its reference (ref)
#
#!/bin/csh -f

# Reference directory
set command_location = `dirname $0`
set DIR = $command_location/../..

set nargs = $#argv
if ($nargs < 2) then
		echo "Syntax:"
		echo "compare_test name1 nametest [option]"
		echo "   name1    : Name of the subContainer (e.g.: data)"
		echo "   nametest : Name of the test (e.g.: Jeu1)"
		echo "   option   : must be either Debug or Release (default: Release)"
		echo "   ajout    : additional parameters for diff (example: -w=160 --side"
		exit
endif

set name1 = $argv[1]
set nametest = $argv[2]

if ($nargs > 2) then
		set option = $argv[3]
else
		set option = "Release"
endif

if ($nargs > 3) then
		set ajout = $argv[4]
else
		set ajout = ""
endif

if ($name1 == "data") then
		set direc = $nametest
		set nameref = "Result.ref"
		set namecmp = "Result.out"
endif
if ($name1 == "cpp") then
		set direc   = "output"
		set nametest = `basename $nametest .cpp`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "py") then
		set direc   = "output"
		set nametest = `basename $nametest .py`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "r") then
		set direc   = "output"
		set nametest = `basename $nametest .r`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "ipynb") then
		set direc   = "output"
		set nametest = `basename $nametest .ipynb`
		set nameref = $nametest.asciidoc
		set namecmp = $nametest.asciidoc
endif

set FILEREF = $DIR/tests/$name1/$direc/$nameref
set FILECMP = $DIR/build/tests/$name1/$option/$direc/$namecmp

diff -b $FILEREF $FILECMP $ajout
