# This script is meant to compare a Resulting test file (out) to its reference (ref)
#
#!/bin/csh -f

# Reference directory
set command_location = `dirname $0`
set DIR = $command_location/../..

set nargs = $#argv
if ($nargs < 2) then
		echo "Syntax:"
		echo "compare_test name1 nametest [ajout]"
		echo "   name1    : Name of the subContainer (e.g.: data)"
		echo "   nametest : Name of the test (e.g.: Jeu1)"
		echo "   ajout    : additional parameters for diff (example: -w=160 --side | more"
		exit
endif

set name1 = $argv[1]
set nametest = $argv[2]
set option = "Release"

if ($nargs > 2) then
		set ajout = $argv[3]
else
		set ajout = ""
endif

if ($name1 == "data") then
		set direcref = $nametest
		set directest = $nametest
		set nameref = "Result.ref"
		set namecmp = "Result.out"
endif
if ($name1 == "cpp") then
		set direcref = "output"
		set directest = ""
		set nametest = `basename $nametest .cpp`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "py") then
		set direcref = "output"
		set directest = ""
		set nametest = `basename $nametest .py`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "r") then
		set direcref = "output"
		set directest = ""
		set nametest = `basename $nametest .r`
		set nameref = $nametest.ref
		set namecmp = $nametest.out
endif
if ($name1 == "ipynb") then
		set direcref = "output"
		set directest = ""
		set nametest = `basename $nametest .ipynb`
		set nameref = $nametest.asciidoc
		set namecmp = $nametest.asciidoc
endif
if ($name1 == "rmd") then
		set direcref = "output"
		set directest = ""
		set nametest = `basename $nametest .ipynb`
		set nameref = $nametest.asciidoc
		set namecmp = $nametest.asciidoc
		echo $FILEREF
endif

set FILEREF = $DIR/tests/$name1/$direcref/$nameref
set FILECMP = $DIR/build/tests/$name1/$option/$directest/$namecmp

diff -b $FILEREF $FILECMP $ajout
